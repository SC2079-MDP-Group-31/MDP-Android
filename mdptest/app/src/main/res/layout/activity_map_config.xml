<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="320dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="320dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="320dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <ToggleButton
                    android:id="@+id/startpointToggleBtn"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:paddingStart="8dp"
                    android:textOff="SET START"
                    android:textOn="CANCEL"
                    android:textSize="18sp"
                    android:background="@drawable/border_black"/>


                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageButton
                        android:id="@+id/changeDirectionBtn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border_black"
                        android:scaleType="centerCrop"
                        app:srcCompat="@mipmap/compass" />

                    <ImageButton
                        android:id="@+id/addObstacleBtn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border_black"
                        android:scaleType="centerCrop"
                        app:srcCompat="@mipmap/treeobst" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/saveBtn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/save_btn"
                        />

                    <ImageButton
                        android:id="@+id/loadBtn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/load_btn"
                        />

                    <ImageButton
                        android:id="@+id/resetBtn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/reset_btn"
                        />
                </LinearLayout>




                <!--                android:drawableLeft="@mipmap/two_head_dragon"-->
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="350dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:background="@drawable/border_black">


                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/textView_changeObstacle"
                        android:layout_width="100dp"
                        android:layout_height="24dp"
                        android:textColor="@color/colorBlack"
                        android:text="Change: "
                        android:textSize="18sp" />

                    <Switch
                        android:id="@+id/changeObstacleSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:id="@+id/textView_drag"
                        android:layout_width="50dp"
                        android:textColor="@color/colorBlack"
                        android:layout_height="wrap_content"
                        android:text="Drag: "
                        android:textSize="18sp" />

                    <Switch
                        android:id="@+id/dragSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp" />

                </LinearLayout>
            </LinearLayout>
<!--            "Preload Defaults"-->
<!--            <Button-->
<!--                android:id="@+id/updateMapBtn"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="13dp"-->
<!--                android:paddingEnd="10dp"-->
<!--                android:text="DO NOT CLICK"-->
<!--                android:background="@drawable/border_black_state"-->
<!--                app:backgroundTint="@color/colorYellow"/>-->

            <ImageView
                android:id="@+id/eBtn"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="00dp"
                android:layout_marginTop="20dp"
        />

        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>